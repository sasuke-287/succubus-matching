{
  "name": "succubus-realm",
  "version": "1.0.0",
  "description": "魅惑のサキュバスマッチングアプリ",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "node src/server.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:frontend": "vitest run tests/unit/test-frontend-api-client.js tests/unit/test-frontend-ui.js",
    "test:api": "vitest run tests/unit/test-api-server.js",
    "test:integration": "vitest run tests/integration/test-frontend-api-integration.js",
    "test:e2e": "playwright test",
    "test:all": "npm run test && npm run test:e2e",
    "install-deps": "npm install express chokidar ws dotenv",
    "install-test-deps": "npm install --save-dev vitest @vitest/ui playwright @playwright/test jsdom node-fetch"
  },
  "keywords": [
    "succubus",
    "matching",
    "game",
    "hot-reload"
  ],
  "author": "Kiro",
  "license": "MIT",
  "dependencies": {
    "chokidar": "^3.6.0",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "express-session": "^1.18.2",
    "node-fetch": "^3.3.2",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@vitest/ui": "^1.0.0",
    "jsdom": "^23.0.0",
    "playwright": "^1.40.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
