# ==========================================
# Succubus Realm - 環境変数設定例
# ==========================================

# 環境設定
NODE_ENV=development

# サーバー設定
HOST=localhost
PORT=3000

# セキュリティ設定
ENABLE_CSP=false
ENABLE_HTTPS_REDIRECT=false
LOG_SECURITY_EVENTS=true
SECURITY_STRICT_MODE=false

# ログ設定
LOG_FILE_PATH=./logs/app.log
LOG_LEVEL=debug
LOG_TO_CONSOLE=true
LOG_TO_FILE=false

# データベース設定（将来用）
DB_PATH=./data/
DB_TYPE=file

# デバッグ設定
DEBUG_ENABLED=true
SHOW_STACK_TRACE=true
VERBOSE_ERRORS=true

# パフォーマンス設定
CACHE_MAX_AGE=0
COMPRESSION_ENABLED=false

# WebSocket設定
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=100

# 開発用設定
HOT_RELOAD_ENABLED=true
WATCH_DELAY=100

