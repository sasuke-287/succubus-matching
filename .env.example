# ==========================================
# Succubus Realm - 環境変数設定例
# ==========================================

# 環境設定
NODE_ENV=development

# サーバー設定
PORT=3000
HOST=localhost

# セキュリティ設定
ENABLE_CSP=false
ENABLE_HTTPS_REDIRECT=false
SECURITY_STRICT_MODE=false
LOG_SECURITY_EVENTS=true

# ログ設定
LOG_LEVEL=debug
LOG_TO_CONSOLE=true
LOG_TO_FILE=false
LOG_FILE_PATH=./logs/app.log

# データベース設定（将来用）
DB_TYPE=file
DB_PATH=./data/

# デバッグ設定
DEBUG_ENABLED=true
SHOW_STACK_TRACE=true
VERBOSE_ERRORS=true

# パフォーマンス設定
COMPRESSION_ENABLED=false
CACHE_MAX_AGE=0

# WebSocket設定
WS_MAX_CONNECTIONS=100
WS_HEARTBEAT_INTERVAL=30000

# 開発用設定
HOT_RELOAD_ENABLED=true
WATCH_DELAY=100

